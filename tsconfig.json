{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client",
            "element-plus/global"
        ],
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
        }
    },
    // npm run build 时，要在下面所有路径前加上 /
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}